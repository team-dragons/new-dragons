<%- partial(`../_layouts/_default.head`, { title : "Zena Jun &amp; Warren Shea Wedding" }) %>
<%- partial(`../_layouts/_default.header`) %>
    <main>
      <header class="home rsvp">
        <div class="wrapper align-self-middle">
          <h1>RSVP</h1>
          <h2>Please RSVP by August 10, 2018</h2>
        </div>
      </header>
      <div class="wrapper">
        <div class="small-12 medium-8 small-centered">
          <form name="rsvp" action="/rsvp/thank-you/" method="post">
            <div class="row">
              <label for="name" class="screen-reader-only">First Name</label>
              <input type="text" placeholder="First Name" name="firstName" id="first-name" value="">
              <span class="name error-message">Please enter your first name</span>
            </div>
            <div class="row">
              <label for="name" class="screen-reader-only">Last Name</label>
              <input type="text" placeholder="Last Name" name="lastName" id="last-name" value="">
              <span class="name error-message">Please enter your last name</span>
            </div>
            <div class="row">
              <select>
                <option value="">I will be attending the Ceremony and Reception</option>
                <option value="">I will be attending the Reception</option>
                <option value="">I will not be able to attend</option>
              </select>
            </div>
            <div class="row">
              <select>
                <option value="">I will be attending</option>
                <option value="">A date will be attending</option>
                <option value="">My family will be attending</option>
              </select>
            </div>
            <div class="row">
              GUEST
              <div class="row">
                <label for="name" class="screen-reader-only">First Name</label>
                <input type="text" placeholder="First Name" name="name" id="name" value="">
                <span class="name error-message">Please enter your first name</span>
              </div>
              <div class="row">
                <label for="name" class="screen-reader-only">Last Name</label>
                <input type="text" placeholder="Last Name" name="name" id="name" value="">
                <span class="name error-message">Please enter your last name</span>
              </div>
              Select a meal type
              <select>
                <option value="">Adult meal</option>
                <option value="">Children's meal</option>
                <option value="">No meal</option>
              </select>
              checkmark I require a highchair.


            </div>


            <div class="row">
              <label for="address" class="screen-reader-only">Address</label>
              <input type="text" placeholder="Address" name="address" id="address" value="">
              <span class="address error-message">Please enter your address</span>
            </div>
            <div class="row">
              <label for="city" class="screen-reader-only">Address</label>
              <input type="text" placeholder="City" name="city" id="city" value="">
              <span class="city error-message">Please enter your city</span>
            </div>
            <div class="row">
              <label for="province" class="screen-reader-only">Province/State</label>
              <input type="text" placeholder="Province / State" name="province" id="province" value="">
              <span class="province error-message">Please enter your province / state</span>
            </div>
            <div class="row">
              <label for="postalcode" class="screen-reader-only">Postal Code / Zip Code</label>
              <input type="text" placeholder="Postal Code / Zip Code" name="postalCode" id="postalcode" value="">
              <span class="postalCode error-message">Please enter your postal code</span>
            </div>
            <div class="row">
              <label for="optional" class="screen-reader-only">Optional Message</label>
              <textarea id="optional" name="optional" onfocus="if(this.value == 'Optional Message') { this.value = ''; }" onblur="if (this.value == '') { this.value='Optional Message'; }">Optional Message</textarea>
            </div>
            <div>
              <button type="submit" name="submit-button" class="primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </main>
<%- partial(`../_layouts/_default.footer`) %>
